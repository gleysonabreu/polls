{
  "name": "copa",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@jest/globals": "^29.3.1",
    "@mermaid-js/mermaid-cli": "^9.1.7",
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "prisma": "^4.5.0",
    "prisma-erd-generator": "^1.2.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsx": "^3.11.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@fastify/cors": "^8.1.1",
    "@fastify/jwt": "^6.3.3",
    "@prisma/client": "^4.5.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.9.2",
    "short-unique-id": "^4.4.4",
    "zod": "^3.19.1"
  },
  "scripts": {
    "dev": "yarn docker:down && yarn docker:up && yarn server",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:destroy": "docker-compose down --volumes --remove-orphans",
    "server": "tsx watch src/index.ts",
    "build": "rimraf build && tsc",
    "start": "node build/index.js",
    "migrate": "prisma migrate dev --name",
    "migration": "prisma migrate dev",
    "migration:prod": "prisma migrate deploy",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:unit": "yarn test -- --watchAll --config jest-unit.config.ts",
    "test:integration": "yarn test -- --watchAll --config jest-integration.config.ts",
    "test:coverage": "yarn test -- --coverage"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
